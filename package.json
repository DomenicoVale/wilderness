{
  "name": "wilderness",
  "description": "Wilderness browser extension",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "check": "tsc --noEmit",
    "format": "biome check --write .",
    "rules:generate": "agent-rules",
    "postinstall": "wxt prepare && simple-git-hooks"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "jquery": "^3.7.1",
    "lucide-react": "^0.563.0",
    "monaco-editor": "^0.55.1",
    "prettier": "^3.8.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^2.6.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/jquery": "^3.5.33",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@wxt-dev/module-react": "^1.1.5",
    "agent-rules": "git+https://github.com/madebywild/agent-rules.git#main",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vite-plugin-static-copy": "^3.1.6",
    "wxt": "^0.20.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run format && git add -A"
  }
}
